<% layout("./layouts/boilerplate.ejs") %>
<script>
    const mapToken =  "<%= process.env.MAP_TOKEN %>";
    const coordinates =  <%- JSON.stringify(listing.geometry.coordinates) %>;
    const loaction = <%- JSON.stringify(listing.location) %>;
</script>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><b><%= listing.title %></b></h3>
        <div class="card show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img"
                alt="listing image">
            <div class="card-body">
                <p class="card-text"><i> owned By: <%= listing.owner.username
                        %></i></p>
                <p class="card-text"><span style="font-style: italic"><%=
                        listing.description
                        %></span></p>
                <p class="card-text">&#8377; <%=
                    listing.price.toLocaleString("en-IN") %></p>
                <p class="card-text">at <%= listing.location %>&nbsp;,<%=
                    listing.country %></p>
            </div>
        </div>
        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="row btns">
            <a href="/stayease/<%= listing._id %>/edit"
                class="mb-3 btn btn-success col-sm-6 ">edit</a>
            <form method="POST"
                action="/stayease/<%= listing._id %>?_method=DELETE"
                class=" ">
                <div class="d-grid gap-2">
                    <button class="btn btn-danger ">Delete</button>
                </div>

            </form>
        </div>
        <% } %>
        <hr>

        <div class="rating mt-3 mb-3">
            <h4>Leave a review</h4>
            <form action="/stayease/<%= listing._id %>/reviews" method="POST"
                novalidate class="needs-validation">
                <div class="rating mt-3 mb-3">

                    <fieldset class="starability-slot">
                        <legend></legend>
                        <input type="radio" id="no-rate"
                            class="input-no-rate"
                            name="review[rating]" value="1 " checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1"
                            name="review[rating]"
                            value="1" />
                        <label for="first-rate1" title="Terrible">1
                            star</label>
                        <input type="radio" id="first-rate2"
                            name="review[rating]"
                            value="2" />
                        <label for="first-rate2" title="Not good">2
                            stars</label>
                        <input type="radio" id="first-rate3"
                            name="review[rating]"
                            value="3" />
                        <label for="first-rate3" title="Average">3
                            stars</label>
                        <input type="radio" id="first-rate4"
                            name="review[rating]"
                            value="4" />
                        <label for="first-rate4" title="Very good">4
                            stars</label>
                        <input type="radio" id="first-rate5"
                            name="review[rating]"
                            value="5" />
                        <label for="first-rate5" title="Amazing">5
                            stars</label>
                    </fieldset>
                </div>

                <div>
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="30"
                        rows="3" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        please enter a comment
                    </div>
                </div>
                <br>
                <button class="btn btn-outline-dark">submit</button>
            </form>
        </div>
        <hr>

        <% if(listing.reviews.length > 0) {%>
        <div class="reviews">
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) {%>
                <div class="card col-5 ms-2 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username
                            %></h5>
                        <p class="starability-result card-text"
                            data-rating="<%= review.rating %>">
                        </p>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating %> stars</p>

                    </div>
                    <% if(currUser && currUser._id.equals(review.author._id)) {
                    %>
                    <form class="mb-3 mt-3" method="POST"
                        action="/stayease/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button
                            class="btn btn-sm btn-dark">delete</button>
                    </form>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
        <hr>
        <% } %>
        <div class="map-div">
            <h3>Where you will be</h3>
            <div id="map"></div>
        </div>
    </div>
</div>
<script src="/js/map.js"></script>